#include<iostream>
using namespace std;
#define MAX 5

class stack 
{
    int arr[MAX];
    int top;

    public:
    stack()
    {
        top = -1;
    }
    /*bool isEmpty()
    {
        return (top == -1);
    }
    bool isFull()
    {
        return (top == MAX-1);
    }*/
    void push(int x)
    {
        if(top == MAX-1)
        {
            cout<<"The stack if full!"<<endl<<x<<endl;
        }
        else
        {
            arr[++top] = x;
            cout<<x<<"Pushed into the stack";
        }

    }
    void pop()
    {
        if(top == -1)
        {
            cout<<"The stack is underflow !!"<<endl;
        }
        else
        {
            cout<<arr[top--]<<"Pushed out from the stack";
        }

    }
    void peek()
    {
        if(top == -1)
        {
            cout<<"Stack is underflow !!"<<endl;
        }
        else 
        {
            cout<<"Top element is: "<<arr[top]<<endl;
        }
    }
    void display()
    {
        if(top == -1)
        {
            cout<<"Stack is underflow no element to be printed"<<endl;
        }
        else 
        {
            cout<<"Stack elements from top to bottom are: ";
            for(int i=top;i>=0;i--)
            {
                cout<<arr[i]<<" ";
            }
        }
    }
};
int main() {
    stack s;
    int choice, value;

    do {
        cout << "\n--- Stack Menu ---\n";
        cout << "1. Push\n2. Pop\n3. Peek\n4. isEmpty\n5. isFull\n6. Display\n0. Exit\n";
        cout << "Enter your choice: ";
        cin >> choice;

        switch (choice) {
        case 1:
            cout << "Enter value to push: ";
            cin >> value;
            s.push(value);
            break;

        case 2:
            s.pop();
            break;

        case 3:
            s.peek();
            break;

        /*case 4:
            if (s.isEmpty())
                cout << "Stack is Empty.\n";
            else
                cout << "Stack is not Empty.\n";
            break;

        case 5:
            if (s.isFull())
                cout << "Stack is Full.\n";
            else
                cout << "Stack is not Full.\n";
            break;*/

        case 6:
            s.display();
            break;

        case 0:
            cout << "Exiting program...\n";
            break;

        default:
            cout << "Invalid choice! Try again.\n";
        }
    } while (choice != 0);

    return 0;
}
